<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.donasi.DonasiActivity">

    <TextView
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Donasi"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="139dp"
        tools:layout_editor_absoluteY="16dp" />

    <ImageView
        android:id="@+id/btnbackdonasi"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/backberanda"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="@font/poppins_semibold"
        android:text="Nama"
        android:textColor="@color/black"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="77dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txt_namadonasi"
        style="@style/TextInputLayout"
        android:layout_width="370dp"
        android:layout_height="50dp"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusTopStart="10dp"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="112dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/lay_namadonasi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_mediumitalic"
            android:hint="Masukkan Nama Lengkap" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="@font/poppins_semibold"
        android:text="Nominal Donasi"
        android:textColor="@color/black"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="352dp" />

    <LinearLayout
        android:layout_width="367dp"
        android:layout_height="120dp"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="23dp"
        tools:layout_editor_absoluteY="438dp">

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Button" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Button" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Button" />

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Button" />
    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txt_nominal"
        style="@style/TextInputLayout"
        android:layout_width="370dp"
        android:layout_height="50dp"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusTopStart="10dp"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="379dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/lay_nominal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/green"
            android:fontFamily="@font/poppins_semibold"
            android:hint="Rp." />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btndonasi"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_extrabold"
        android:text="Donasi"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="650dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:fontFamily="@font/poppins_semibold"
        android:text="Do'a"
        android:textColor="@color/black"
        android:textSize="16sp"
        tools:layout_editor_absoluteX="23dp"
        tools:layout_editor_absoluteY="176dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txt_doa"
        style="@style/TextInputLayout"
        android:layout_width="370dp"
        android:layout_height="110dp"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusTopStart="10dp"
        tools:layout_editor_absoluteX="20dp"
        tools:layout_editor_absoluteY="211dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/lay_doa"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:fontFamily="@font/poppins_mediumitalic"
            android:hint="Cantumkan Do'a Terbaik Untuk Diri dan Keluarga" />
    </com.google.android.material.textfield.TextInputLayout>
</androidx.constraintlayout.widget.ConstraintLayout>