<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".activity.donasi.DonasiActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/btnbackdonasi"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/backberanda"
            android:layout_gravity="start|center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="DONASI"
            android:fontFamily="@font/poppins_bold"
            android:textSize="20sp"
            android:textColor="@color/green"
            android:textAlignment="center"
            android:layout_gravity="center"/>

    </LinearLayout>

    <ScrollView
        android:id="@+id/svDonasi"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">

        <TextView
            android:id="@+id/nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:text="Nama"
            android:textColor="@color/black"
            android:textSize="20sp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txt_nama"
            style="@style/TextInputLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            app:boxCornerRadiusTopStart="10dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/lay_nama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_mediumitalic"
                android:hint="Masukkan Nama Lengkap" />

        </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/keterangan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="Keterangan"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginTop="10dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txt_keterangan"
                style="@style/TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusTopStart="10dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/lay_keterangan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_mediumitalic"
                    android:hint="Santunan / Pembangunan" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/doa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="Do'a"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginTop="10dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/txt_doa"
                style="@style/TextInputLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxCornerRadiusBottomEnd="10dp"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                app:boxCornerRadiusTopStart="10dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/lay_doa"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_mediumitalic"
                    android:hint="Cantumkan do'a terbaik untuk diri anda dan keluarga" />

            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/nominal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:text="Nominal Donasi"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_tombol3"
                android:backgroundTint="@color/green"
                android:orientation="horizontal"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rp."
                    android:textSize="30sp"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="@color/white"
                    android:layout_gravity="start|center"/>

                <EditText
                    android:id="@+id/lay_nominal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="0"
                    android:textSize="30sp"
                    android:fontFamily="@font/poppins_bold"
                    android:textColor="@color/white"
                    android:textAlignment="textEnd"
                    android:layout_gravity="end|center"
                    android:layout_marginStart="10dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="start"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:text="25.000"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="20sp"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/green"
                    android:padding="10dp"/>

            </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="start"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:paddingStart="10dp">

                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="180dp"
                        android:layout_height="wrap_content"
                        android:text="50.000"
                        android:fontFamily="@font/poppins_bold"
                        android:textSize="20sp"
                        android:textColor="@color/white"
                        android:backgroundTint="@color/green"
                        android:padding="10dp"/>

                </LinearLayout>

            </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="start"
                        android:paddingBottom="8dp">

                        <androidx.appcompat.widget.AppCompatButton
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:text="75.000"
                            android:fontFamily="@font/poppins_bold"
                            android:textSize="20sp"
                            android:textColor="@color/white"
                            android:backgroundTint="@color/green"
                            android:padding="10dp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="start"
                        android:paddingBottom="8dp"
                        android:paddingStart="10dp">

                        <androidx.appcompat.widget.AppCompatButton
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:text="100.000"
                            android:fontFamily="@font/poppins_bold"
                            android:textSize="20sp"
                            android:textColor="@color/white"
                            android:backgroundTint="@color/green"
                            android:padding="10dp"/>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnDonasi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DONASI"
                android:fontFamily="@font/poppins_bold"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:backgroundTint="@color/green"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>