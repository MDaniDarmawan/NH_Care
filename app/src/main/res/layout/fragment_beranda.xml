<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.beranda.BerandaFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <ImageView
        android:id="@+id/sampuldonasi"
        android:layout_width="433dp"
        android:layout_height="275dp"
        tools:layout_editor_absoluteX="-11dp"
        tools:layout_editor_absoluteY="-99dp"
        tools:src="@tools:sample/backgrounds/scenic" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="410dp"
        android:layout_height="168dp"
        android:gravity="center"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="4dp">

        <com.google.android.material.bottomappbar.BottomAppBar
            android:layout_width="360dp"
            android:layout_height="80dp"
            tools:layout_editor_absoluteX="25dp"
            tools:layout_editor_absoluteY="62dp" />

        <TextView
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:text="Total Dana Donasi :"
            android:textColor="@color/black"
            android:textSize="24sp"
            app:layout_constraintBottom_toTopOf="@+id/totaldonasi"
            tools:layout_editor_absoluteX="24dp" />

        <Button
            android:id="@+id/totaldonasi"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:textColor="@color/black"
            tools:layout_editor_absoluteX="55dp"
            tools:layout_editor_absoluteY="102dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.chip.ChipGroup
        android:layout_width="410dp"
        android:layout_height="270dp"
        android:paddingLeft="5dp"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="199dp">

        <ImageButton
            android:id="@+id/menudonasi"
            android:layout_width="90dp"
            android:layout_height="120dp"
            tools:src="@tools:sample/avatars" />

        <ImageButton
            android:id="@+id/dataanak"
            android:layout_width="90dp"
            android:layout_height="120dp"
            tools:src="@tools:sample/avatars" />

        <ImageButton
            android:id="@+id/alokasidana"
            android:layout_width="90dp"
            android:layout_height="120dp"
            tools:src="@tools:sample/avatars" />

        <ImageButton
            android:id="@+id/program"
            android:layout_width="90dp"
            android:layout_height="120dp"
            tools:src="@tools:sample/avatars" />

        <ImageButton
            android:id="@+id/imageButton5"
            android:layout_width="90dp"
            android:layout_height="120dp"
            tools:src="@tools:sample/avatars" />

        <ImageButton
            android:id="@+id/imageButton6"
            android:layout_width="90dp"
            android:layout_height="120dp"
            tools:src="@tools:sample/avatars" />

        <ImageButton
            android:id="@+id/imageButton7"
            android:layout_width="90dp"
            android:layout_height="120dp"
            tools:src="@tools:sample/avatars" />
    </com.google.android.material.chip.ChipGroup>

    <VideoView
        android:id="@+id/videoyt"
        android:layout_width="432dp"
        android:layout_height="605dp"
        tools:layout_editor_absoluteX="-6dp"
        tools:layout_editor_absoluteY="476dp" />

</androidx.constraintlayout.widget.ConstraintLayout>