<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.beranda.BerandaFragment">

    <ScrollView
        android:id="@+id/svBeranda"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/bg_panti"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="30dp"
                android:background="@drawable/bgdonasi">

                <LinearLayout
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button"
                    android:orientation="vertical"
                    android:padding="10dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_bold"
                        android:text="TOTAL DANA DONASI :"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:padding="5dp"
                        android:textAlignment="center"
                        android:layout_gravity="center"/>

                    <TextView
                        android:id="@+id/totaldonasi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_light"
                        android:padding="5dp"
                        android:text="RP.1.000.000.00"
                        android:textColor="@color/black"
                        android:textSize="32sp"
                        android:textAlignment="center"/>

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="90dp"
                    android:layout_height="113dp"
                    android:layout_margin="5dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="86dp"
                        android:layout_height="109dp"
                        android:background="@drawable/button">

                        <ImageView
                            android:layout_width="81dp"
                            android:layout_height="98dp"
                            android:background="@drawable/icon_donasi"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="90dp"
                    android:layout_height="113dp"
                    android:layout_margin="5dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="86dp"
                        android:layout_height="109dp"
                        android:background="@drawable/button">

                        <ImageView
                            android:id="@+id/btnanak"
                            android:layout_width="81dp"
                            android:layout_height="98dp"
                            android:background="@drawable/icon_anak_asuh"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="90dp"
                    android:layout_height="113dp"
                    android:layout_margin="5dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="86dp"
                        android:layout_height="109dp"
                        android:background="@drawable/button">

                        <ImageView
                            android:id="@+id/btnalokasi"
                            android:layout_width="81dp"
                            android:layout_height="98dp"
                            android:background="@drawable/icon_website"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="90dp"
                    android:layout_height="113dp"
                    android:layout_margin="5dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="86dp"
                        android:layout_height="109dp"
                        android:background="@drawable/button">

                        <ImageView
                            android:id="@+id/btnprogram"
                            android:layout_width="81dp"
                            android:layout_height="98dp"
                            android:background="@drawable/icon_program"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginStart="5dp"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="90dp"
                        android:layout_height="113dp"
                        android:layout_margin="5dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="86dp"
                            android:layout_height="109dp"
                            android:background="@drawable/button">

                            <ImageView
                                android:id="@+id/btnacara"
                                android:layout_width="81dp"
                                android:layout_height="98dp"
                                android:background="@drawable/icon_acara"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="90dp"
                        android:layout_height="113dp"
                        android:layout_margin="5dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="86dp"
                            android:layout_height="109dp"
                            android:background="@drawable/button">

                            <ImageView
                                android:id="@+id/btnwebsite"
                                android:layout_width="81dp"
                                android:layout_height="98dp"
                                android:background="@drawable/icon_alokasi_dana"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="90dp"
                        android:layout_height="113dp"
                        android:layout_margin="5dp">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="86dp"
                            android:layout_height="109dp"
                            android:background="@drawable/button">

                            <ImageView
                                android:id="@+id/btnvideo"
                                android:layout_width="81dp"
                                android:layout_height="98dp"
                                android:background="@drawable/icon_video"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"/>

                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Rekomendasi Video Kajian"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_gravity="center"/>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button2"
                    android:backgroundTint="@color/green"
                    android:orientation="vertical"
                    android:layout_gravity="start|center"
                    android:layout_marginStart="5dp"
                    >

                    <TextView
                        android:id="@+id/btnyt"
                        android:layout_width="100dp"
                        android:layout_height="20dp"
                        android:fontFamily="@font/poppins_bold"
                        android:text="Lihat Semua"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:textAlignment="center"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">

            <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
                android:id="@+id/ytkajian"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                app:videoId="3LcgoT8kez4"
                app:autoPlay="false" />

            <com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView
                android:id="@+id/ytnuha"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                app:videoId="diM6jvYXELQ"
                app:autoPlay="false" >

            </com.pierfrancescosoffritti.androidyoutubeplayer.core.player.views.YouTubePlayerView>

            </LinearLayout>


        </LinearLayout>

    </ScrollView>
</LinearLayout>